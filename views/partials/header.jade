nav.navbar.navbar-default.hidden-xs
    div.container-fluid
        div.navbar-header
            a.navbar-brand(href='/',ng-click="setCurrentPage('/')") 
                |{{siteTitle}}
            h3.navbar-text.pulse
                |{{currentPage.title}}
        div.collapse.navbar-collapse.navbar-right
            ul.nav.navbar-nav
                li(ng-repeat='page in sitePages')
                     a(href="/{{page.id}}", ng-click="setCurrentPage(page)", ng-class="{active:page === currentPage}") 
                        |{{page.title}}
                    
nav.navbar.navbar-default.hidden-sm.hidden-md.hidden-lg
    div.container-fluid
        ul.nav.nav-pills.row
            li(ng-repeat='page in sitePages').col-xs-2
                 a(href="/{{page.id}}", ng-click="setCurrentPage(page)", ng-class="{active:page === currentPage}") 
                    |{{page.title}}
   
   
